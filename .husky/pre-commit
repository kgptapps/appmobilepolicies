#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit quality checks..."

# Run type checking
echo "📝 Type checking..."
npm run type-check
if [ $? -ne 0 ]; then
  echo "❌ Type checking failed. Please fix TypeScript errors before committing."
  exit 1
fi

# Run lint-staged (linting and formatting)
echo "🧹 Linting and formatting staged files..."
npx lint-staged
if [ $? -ne 0 ]; then
  echo "❌ Linting failed. Please fix linting errors before committing."
  exit 1
fi

# Run build to ensure everything compiles
echo "🏗️ Testing build..."
npm run build
if [ $? -ne 0 ]; then
  echo "❌ Build failed. Please fix build errors before committing."
  exit 1
fi

echo "✅ All quality checks passed! Proceeding with commit..."
